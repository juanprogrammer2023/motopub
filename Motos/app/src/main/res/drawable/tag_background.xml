<!-- res/drawable/tag_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->

    <!-- Fondo y borde -->
    <item android:top="2dp" android:left="2dp"> <!-- Desplazamiento para efecto de sombra -->
        <shape android:shape="rectangle">
            <solid android:color="#3949AB"/> <!-- Azul mÃ¡s claro para el fondo -->
            <corners android:radius="12dp"/>
            <stroke
                android:width="2dp"
                android:color="#5C6BC0"/> <!-- Azul claro para el borde -->
            <padding
                android:left="16dp"
                android:right="16dp"
                android:top="8dp"
                android:bottom="8dp"/> <!-- Espacio interno -->
        </shape>
    </item>
</layer-list>
