<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra muy sutil -->
    <item>
        <shape>
            <padding
                android:bottom="2dp"
                android:left="1dp"
                android:right="1dp"
                android:top="0dp" />
            <solid android:color="#10000000" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Fondo con gradiente cÃ¡lido muy suave -->
    <item>
        <shape>
            <gradient
                android:angle="135"
                android:endColor="#FFFFFF"
                android:startColor="#FFFFFF"
                android:type="linear" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Borde sutil -->
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="#FFFFFF" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!-- Contenido -->
    <item>
        <shape>
            <padding
                android:bottom="12dp"
                android:left="14dp"
                android:right="14dp"
                android:top="12dp" />
            <solid android:color="#00000000" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</layer-list>